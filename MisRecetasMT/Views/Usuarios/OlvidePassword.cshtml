@model MisRecetasMT.ViewModels.Usuario.OlvidePasswordModel
@{
    Layout = null;

}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<h1>Recuperar Password</h1>
 
<div class="container align-self-md-center">
    <div class="login-box">
        <div class="login-logo">
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Ingrese su correo</p>

                <form method="post" asp-action="OlvidePassword">
                    <span asp-validation-for="Email" class="text-danger small"></span>
                    <div class="input-group mb-3">
                        <input asp-for="Email" class="form-control" placeholder="email" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <div asp-validation-summary="All" class="text-danger small"></div>
                </form>
            </div>
        </div>
    </div>
</div>
   